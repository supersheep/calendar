prefix = "ui-"
split = "-"
.{prefix}calendar
    z-index: 999
    // 左右箭头
    .{prefix}calendar{split}arrow
        background-color: #fff
        border:1px solid #e4e4e3
        border-bottom: none
        padding:5px
        clearfix()
        li
          padding: 0
        .last_month
          position: absolute
          top: 7px
          left: 7px
        .next_month
          position: absolute
          top: 7px
          right: 7px
        a:hover
          text-decoration: none
        .{prefix}calendar{split}today
          position: static
          text-align: center

// 日历主体
.{prefix}calendar{split}wrapper
    display: table
    border-collapse: collapse
    line-height: 18px
    clearfix()
    ul
      clearfix()
    .{prefix}calendar{split}date,
    .{prefix}calendar{split}week
      width: 25px
      height: 22px
      line-height: 22px
      color: #999
      text-align: center
      cursor: pointer
      padding: 0
      border-width: 1px
      border-style: solid
      margin-top: -1px
      margin-left: -1px
    .{prefix}calendar{split}date
      border-color: #ededed
    .{prefix}calendar{split}week
      border-color: #fff
      background-color: #fff
      padding: 3px 0
    .{prefix}calendar{split}availiable
      background-color: #fff
    .{prefix}calendar{split}date{split}default
      background-color: #ff8400
      color: #fff
    // .today
    //   background-color: #ff8400
    //   color: #fff
    .{prefix}calendar{split}month
      border: 1px solid #ededed
      background-color: #fff
      width: 50px
      text-align: center
      padding: 15px 0
      cursor: pointer
    .{prefix}calendar{split}month{split}default
      background-color: #ff8400
      color: #fff
    .{prefix}calendar{split}invalid
      background-color: #ededed
      border:1px solid #e4e4e3
      color: #999
    .{prefix}calendar{split}outrange
      background-color: #ededed
      border:1px solid #e4e4e3